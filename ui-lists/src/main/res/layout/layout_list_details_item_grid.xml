<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  >

  <ImageView
    android:id="@+id/listDetailsGridItemImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

  <ImageView
    android:id="@+id/listDetailsGridItemPlaceholder"
    android:layout_width="@dimen/showTilePlaceholder"
    android:layout_height="@dimen/showTilePlaceholder"
    android:layout_gravity="center"
    android:visibility="gone"
    app:srcCompat="@drawable/ic_television"
    app:tint="?attr/colorPlaceholderIcon"
    tools:visibility="visible"
    />

  <ProgressBar
    android:id="@+id/listDetailsGridItemProgress"
    style="@style/ProgressBar.Dark"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_gravity="center"
    android:visibility="gone"
    />

  <TextView
    android:id="@+id/listDetailsGridItemRating"
    style="@style/ImageTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/spaceTiny"
    android:background="@drawable/bg_text_on_surface"
    android:drawablePadding="2dp"
    android:gravity="end"
    android:paddingStart="4dp"
    android:paddingTop="2dp"
    android:paddingEnd="4dp"
    android:paddingBottom="2dp"
    android:shadowColor="@color/colorTransparent"
    android:textColor="@color/colorWhite"
    android:textSize="11sp"
    android:visibility="gone"
    app:drawableStartCompat="@drawable/ic_star_small"
    app:drawableTint="@color/colorWhite"
    tools:text="9.9"
    tools:visibility="visible"
    />

  <ImageView
    android:id="@+id/listDetailsGridItemHandle"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_rank"
    android:padding="4dp"
    android:visibility="gone"
    app:srcCompat="@drawable/ic_handle"
    app:tint="@color/colorWhite"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/listDetailsGridItemRank"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/spaceTiny"
    android:background="@drawable/bg_rank"
    android:gravity="center"
    android:includeFontPadding="false"
    android:textColor="?attr/textColorOnSurface"
    android:textSize="10sp"
    android:textStyle="bold"
    android:translationZ="@dimen/elevationSmall"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/listDetailsShowImage"
    app:layout_constraintEnd_toEndOf="@id/listDetailsShowImage"
    tools:ignore="SmallSp"
    tools:text="10"
    tools:visibility="visible"
    />

  <ImageView
    android:id="@+id/listDetailsGridItemBadge"
    style="@style/Badge"
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_marginEnd="2dp"
    android:translationY="-3dp"
    app:layout_constraintEnd_toEndOf="@id/listDetailsShowImage"
    app:layout_constraintTop_toTopOf="@id/listDetailsShowImage"
    app:srcCompat="@drawable/ic_bookmark_full"
    tools:visibility="visible"
    />

</merge>