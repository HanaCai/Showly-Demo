<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/viewPersonDetailsRoot"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clipToPadding="false"
  android:focusableInTouchMode="true"
  tools:background="?android:windowBackground"
  tools:ignore="UnusedAttribute"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
  tools:targetApi="m"
  >

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/viewPersonDetailsImageGuide1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="96dp"
    />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/viewPersonDetailsImageGuide2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="120dp"
    />

  <ImageView
    android:id="@+id/viewPersonDetailsImage"
    android:layout_width="@dimen/personImageWidth"
    android:layout_height="@dimen/personImageHeight"
    android:background="@drawable/bg_person_image_elevation"
    android:elevation="@dimen/elevationNormal"
    android:foreground="@drawable/bg_media_view_ripple"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/viewPersonDetailsImageGuide2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible"
    />

  <ImageView
    android:id="@+id/viewPersonDetailsPlaceholder"
    android:layout_width="@dimen/personImageWidth"
    android:layout_height="@dimen/personImageHeight"
    android:layout_gravity="center"
    android:background="@drawable/bg_person_placeholder"
    android:elevation="@dimen/elevationNormal"
    android:foreground="@drawable/bg_media_view_ripple"
    android:padding="@dimen/spaceBig"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/viewPersonDetailsImageGuide2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_person_outline"
    app:tint="?attr/colorPlaceholderIcon"
    tools:visibility="visible"
    />

  <ImageView
    android:id="@+id/viewPersonDetailsLinkIcon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:paddingStart="8dp"
    android:paddingBottom="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_link"
    app:tint="?android:attr/textColorPrimary"
    />

  <TextView
    android:id="@+id/viewPersonDetailsTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="start"
    android:includeFontPadding="false"
    android:maxLines="2"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@id/viewPersonDetailsLinkIcon"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsImageGuide1"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Janet Jackson"
    />

  <TextView
    android:id="@+id/viewPersonDetailsSubtitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="start"
    android:maxLines="1"
    android:textAlignment="viewStart"
    android:textColor="@color/colorAccent"
    android:textSize="14sp"
    app:layout_constraintEnd_toStartOf="@id/viewPersonDetailsLinkIcon"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsImageGuide1"
    app:layout_constraintTop_toBottomOf="@id/viewPersonDetailsTitle"
    tools:text="Starlord, John Doe, Starlord, John Doe, Starlord, John Doe, Starlord, John Doe"
    />

  <TextView
    android:id="@+id/viewPersonDetailsBirthdayLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="start"
    android:maxLines="1"
    android:text="@string/textBorn"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorSecondary"
    android:textSize="14sp"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsImageGuide1"
    app:layout_constraintTop_toTopOf="@id/viewPersonDetailsBirthdayValue"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/viewPersonDetailsBirthdayValue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spaceTiny"
    android:layout_marginBottom="@dimen/spaceMicro"
    android:ellipsize="end"
    android:gravity="start"
    android:maxLines="2"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="14sp"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/viewPersonDetailsDeathdayValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsBirthdayLabel"
    app:layout_goneMarginBottom="0dp"
    tools:text="@tools:sample/lorem/random"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/viewPersonDetailsDeathdayLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="start"
    android:maxLines="1"
    android:text="@string/textDied"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorSecondary"
    android:textSize="14sp"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/viewPersonDetailsImageGuide2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsImageGuide1"
    app:layout_goneMarginTop="@dimen/spaceMedium"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/viewPersonDetailsDeathdayValue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spaceTiny"
    android:ellipsize="end"
    android:gravity="start"
    android:maxLines="1"
    android:text="-"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="14sp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/viewPersonDetailsDeathdayLabel"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsDeathdayLabel"
    app:layout_constraintTop_toTopOf="@id/viewPersonDetailsDeathdayLabel"
    tools:ignore="HardcodedText"
    tools:text="@tools:sample/lorem/random"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/viewPersonDetailsAgeLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="start"
    android:maxLines="1"
    android:text="@string/textAge"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorSecondary"
    android:textSize="14sp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/viewPersonDetailsAgeValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsImageGuide1"
    app:layout_constraintTop_toTopOf="@id/viewPersonDetailsAgeValue"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/viewPersonDetailsAgeValue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spaceTiny"
    android:layout_marginBottom="@dimen/spaceMicro"
    android:gravity="start"
    android:textAlignment="viewStart"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="14sp"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/viewPersonDetailsBirthdayValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsBirthdayLabel"
    app:layout_goneMarginBottom="0dp"
    tools:text="@tools:sample/lorem"
    tools:visibility="visible"
    />

  <View
    android:id="@+id/viewPersonDetailsSeparator"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/spaceNormal"
    android:layout_marginBottom="@dimen/spaceMedium"
    android:background="?attr/colorSeparator"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/viewPersonDetailsImageGuide2"
    />

  <ProgressBar
    android:id="@+id/viewPersonDetailsProgress"
    style="@style/ProgressBar.Accent"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginEnd="@dimen/spaceNormal"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/viewPersonDetailsImageGuide2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/viewPersonDetailsImageGuide1"
    app:layout_constraintTop_toBottomOf="@id/viewPersonDetailsSubtitle"
    tools:visibility="visible"
    />

</merge>
