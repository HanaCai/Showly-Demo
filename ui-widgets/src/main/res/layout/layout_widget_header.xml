<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="android.widget.LinearLayout"
  >

  <TextView
    android:layout_width="@dimen/spaceMedium"
    android:layout_height="0dp"
    />

  <ImageView
    android:id="@+id/progressWidgetHeaderTitleIcon"
    android:layout_width="wrap_content"
    android:layout_height="28dp"
    android:layout_gravity="end|center_vertical"
    android:layout_marginStart="-4dp"
    android:layout_marginEnd="@dimen/spaceTiny"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:src="@drawable/ic_history"
    android:tint="?android:attr/textColorPrimary"
    android:translationY="1dp"
    android:visibility="gone"
    app:tint="?android:attr/textColorPrimary"
    tools:ignore="UseAppTint"
    tools:visibility="visible"
    />

  <TextView
    android:id="@+id/progressWidgetHeaderTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spaceTiny"
    android:layout_marginBottom="@dimen/spaceTiny"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="16sp"
    android:textStyle="bold"
    tools:text="Coming Soon"
    />

  <TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_weight="1"
    />

  <ImageView
    android:id="@+id/progressWidgetHeaderIcon"
    android:layout_width="56dp"
    android:layout_height="28dp"
    android:layout_gravity="end|center_vertical"
    android:paddingStart="20dp"
    android:paddingTop="4dp"
    android:paddingEnd="0dp"
    android:paddingBottom="4dp"
    android:src="@drawable/ic_history"
    android:tint="?android:attr/textColorPrimary"
    android:visibility="gone"
    app:tint="?android:attr/textColorPrimary"
    tools:ignore="UseAppTint"
    tools:visibility="visible"
    />

</merge>
