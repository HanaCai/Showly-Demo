<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clipChildren="false"
  android:clipToPadding="false"
  >

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/movieDetailsStreamingsRecycler"
    android:layout_width="match_parent"
    android:layout_height="@dimen/streamingTileHeight"
    android:layout_marginTop="@dimen/spaceMicro"
    android:layout_marginBottom="@dimen/spaceNormal"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:paddingStart="@dimen/spaceNormal"
    android:paddingEnd="@dimen/spaceNormal"
    app:layout_constraintBottom_toTopOf="@id/movieDetailsDescription"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/movieDetailsRatings"
    />

</FrameLayout>
